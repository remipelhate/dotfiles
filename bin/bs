#!/bin/sh

bootAndLoginToBox() {
    cd $BS/web-app
    command vagrant up
    command vagrant ssh -- -t 'cd /var/www/development.promoter/current; /bin/bash'
}

shutdownBox() {
    command vagrant halt
}

navigateToDirectory() {
    cd $BS/$@
}

case $@ in
    "up") bootAndLoginToBox ;;
    "down") shutdownBox ;;
    *) navigateToDirectory $@
esac
