#!/bin/sh

case $@ in
    "up") # Fire up the web-app Vagrant box
        cd $BS/web-app
        command vagrant up
        command vagrant ssh -- -t 'cd /var/www/development.promoter/current; /bin/bash' ;;
    "down") # Halt the web-app Vagrant box
        command vagrant halt ;;
    "app") # Navigate to the BeatSwitch App directory
        cd $BS/web-app ;;
    *) # Navigate to the BeatSwitch dev directory
        cd $BS
esac
